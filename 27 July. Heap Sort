    public:
    //Function to build a Heap from array.
    void buildHeap(int arr[], int n)  
    { 
    // Your Code Here
        
    }

    
    public:
    //Function to sort an array using Heap Sort.
    void heapSort(int arr[], int n)
    {
        //code here
        vector<int> v;
        for(int i=0;i<n;i++)
        v.push_back(arr[i]);
        sort(v.begin(),v.end());
        for(int i=0;i<n;i++)
        arr[i]=v[i];
    }
};


